# Configuración de OpenAI
OPENAI_API_KEY=your-api-key-here
OPENAI_PROMPT_MODEL=gpt-4 
OPENAI_FT_MODEL=gpt-3.5-turbo  

# Configuración de Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Configuración del proveedor LLM
LLM_PROVIDER=openai  # openai, gemini o dejar vacío para autodetección
LLM_MODE=prompt      # prompt, ft, auto, off

# Configuración de OCR
TESSERACT_PATH=/usr/bin/tesseract  
OCR_LANGUAGES=spa,eng 
OCR_DPI=300

# Configuración de detección de idiomas
LANGUAGE_DEFAULT=es
LANGUAGE_MIN_CONFIDENCE=0.6
USE_FASTTEXT=false
FASTTEXT_MODEL_PATH=data/models/fasttext/lid.176.ftz

# Configuración de rutas
DATA_DIR=data
RESULT_DIR=result

# Configuración de logging
LOG_LEVEL=INFO